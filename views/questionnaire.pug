extends layout

block content
 div(class="container")
  h1= title
  if show
   div(class="form")
    form(method='post')
      p Co przedszkolaki lubią najbardziej?
      ul
        each item in data
          li 
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Zagłosuj' class="button")
      p Aby zobaczyć wyniki oddaj głos
  else
    h1 Dokonałeś już głosu w ankiecie
    p Wyniki
    ul
      each item in data
        li #{item.title} głosów: #{item.vote}(#{Math.round(item.vote/sum*100)}%)
    p Głosów oddano: #{sum}